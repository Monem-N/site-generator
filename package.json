{
  "name": "docsify-site-generator",
  "version": "1.0.0",
  "description": "A documentation-driven website generator with Docsify integration",
  "main": "dist/index.js",
  "bin": {
    "site-generator": "dist/cli.js",
    "site-generator-enhanced": "dist/cli-enhanced.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "start:enhanced": "node dist/cli-enhanced.js",
    "dev": "tsc --watch",
    "dev:serve": "tsc && node dist/cli-enhanced.js --serve",
    "dev:watch": "tsc && node dist/cli-enhanced.js --watch --serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "documentation",
    "website",
    "generator",
    "docsify",
    "markdown",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "front-matter": "^4.0.2",
    "marked": "^4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "babel-jest": "^29.5.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  }
}
